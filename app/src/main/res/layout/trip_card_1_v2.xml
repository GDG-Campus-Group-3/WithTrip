<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/trip_card_1_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginVertical="18dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/trip_card_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:textColor="#4F4F4F"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/trip_card_1_image"
        app:layout_constraintTop_toTopOf="@+id/trip_card_1_image"
        tools:text="@tools:sample/cities" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_board_marker"
        app:layout_constraintStart_toStartOf="@+id/trip_card_1_title"
        app:layout_constraintTop_toBottomOf="@+id/trip_card_1_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4F4F4F"
        android:textSize="12sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/iv_marker"
        app:layout_constraintTop_toTopOf="@+id/iv_marker"
        app:layout_constraintBottom_toBottomOf="@+id/iv_marker"
        tools:text="@tools:sample/cities" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_people"
        app:layout_constraintStart_toStartOf="@+id/iv_marker"
        app:layout_constraintTop_toBottomOf="@+id/iv_marker" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4F4F4F"
        android:textSize="12sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/iv_people"
        app:layout_constraintTop_toTopOf="@+id/iv_people"
        app:layout_constraintBottom_toBottomOf="@+id/iv_people"
        tools:text="@tools:sample/cities" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_calender"
        app:layout_constraintStart_toStartOf="@+id/iv_people"
        app:layout_constraintTop_toBottomOf="@+id/iv_people" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4F4F4F"
        android:textSize="12sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/iv_calender"
        app:layout_constraintTop_toTopOf="@+id/iv_calender"
        app:layout_constraintBottom_toBottomOf="@+id/iv_calender"
        tools:text="@tools:sample/cities" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4F4F4F"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@+id/tv_calender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_calender"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@tools:sample/cities" />

    <View
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#4F4F4F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
